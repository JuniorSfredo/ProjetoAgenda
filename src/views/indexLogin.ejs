<%- include('includes/head')%>
<%- include('includes/nav')%>

<div class="container">
    <div class="flex-row">
        <div class="col-lg-2"></div>
        <div class="flex-row">
            <h1 class="display-1 text-center mt-4"> <strong>Login</strong></h1>
            <p class="text-center mt-4">Faça seu login ou crie uma conta</p>
        </div>

        <%- include('includes/messages')%>

        <div class="row mt-5 mx-auto">

            <div class="col-lg">
                <input type="hidden" name="_csrf" value=<%= csrftoken %>>
                <h2>Registre-se:</h2>
                <p>Se você não possui uma conta, crie uma abaixo</p>
                <form class="form-cadastro" action="/login/register" method="POST">
                    <div class="form-group">
                        <label>Seu email:</label>
                        <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Sua senha:</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary">Criar Conta</button>
                </form>
            </div>

            <div class="col-lg">
                <input type="hidden" name="_csrf" value=<%= csrftoken %>>
                <h2>Logar-se:</h2>
                <p class="mb-3">Se você já tem uma conta, faça login abaixo:</p>
                <form class="form-login" action="/login/login" method="POST">
                    <div class="form-group">
                        <label>Seu email:</label>
                        <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Sua senha:</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary">Fazer Login</button>
                </form>
            </div>


        </div>

</div>

<%- include('includes/footer')%>